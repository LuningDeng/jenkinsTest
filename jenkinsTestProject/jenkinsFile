pipeline {
    agent any 
    tools { 
        maven 'M3' 
        jdk 'JDK1.8' 
    }
     parameters {
        string(name: 'PERSON', defaultValue: 'Mr Justin', description: 'Who is the tester?')
    }
    stages {
        stage ('Initialize') {
            steps {
 					bat 'echo %PATH%'
 					bat 'echo %params.PERSON%'
            }
        }
        stage ('Build') {
            steps { 
                bat 'mvn -f jenkinsTestProject/pom.xml package' 
            }
            post {
                success {
                    junit 'jenkinsTestProject/target/surefire-reports/**/*.xml'
                    archiveArtifacts artifacts: '**/*.jar', fingerprint: true 
                }
            }
        }
    }
}
