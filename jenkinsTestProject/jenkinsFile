pipeline {
    agent any 
    tools { 
        maven 'M3' 
        jdk 'JDK1.8' 
    }
    parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Morna', description: 'Who is this?')
    }
    triggers{
                    //cron('H/2 * * * *')
    }
 
    stages {
        stage ('Initialize') {
            steps {
 					bat 'echo %PATH%'
 					echo '${params.PERSON}'
            }
        }
        stage ('Build') {
            steps { 
                bat 'mvn -f jenkinsTestProject/pom.xml package' 
            }
            post {
                success {
                    junit 'jenkinsTestProject/target/surefire-reports/**/*.xml'
                    archiveArtifacts artifacts: '**/*.jar', fingerprint: true 
                }
            }
        }
    }
}
