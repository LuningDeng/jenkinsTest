pipeline {
    agent any 
    tools { 
        maven 'M3' 
        jdk 'JDK1.8' 
    }
    stages {
        stage ('Initialize') {
            steps {
 					bat 'echo %PATH%'
 					bat 'echo %cd%'
            }
        }
        stage ('Build') {
            steps { 
                bat 'mvn -f jenkinsTestProject/pom.xml package' 
            }
            post {
                success {
                    junit 'jenkinsTestProject/target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
}